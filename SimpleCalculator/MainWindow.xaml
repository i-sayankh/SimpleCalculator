        <Button x:Name="btnReset" Content="Reset" Click="btnReset_Click" HorizontalAlignment="Left" Margin="105,297,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.833,-0.248" Width="77" Height="28"/>

    </Grid>

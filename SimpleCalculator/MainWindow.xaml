        <TextBox x:Name="txtBox1" HorizontalAlignment="Left" Margin="122,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="121" Height="24"/>
        <Label Content="Number2" HorizontalAlignment="Left" Margin="43,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.105,-0.268" Height="24" Width="61"/>
